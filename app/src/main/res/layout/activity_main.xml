<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f7fc"
    tools:context=".MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:elevation="3dp"
            android:background="@color/colorPrimary">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rel"
            android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/sharechat"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/rectangle"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:elevation="3dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/sharechat"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginStart="90dp"
                android:layout_toStartOf="@id/sharechat_arr"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ShareChat"
                    android:textSize="22sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download ShareChat Videos "
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/sharechat_arr"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"></ImageView>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/whatsapp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rectangle"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="3dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/whatsapp_logo"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="90dp"
                    android:layout_toStartOf="@id/whatsapp_arr"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WhatsApp"
                        android:textSize="22sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download WhatsApp Videos "
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryDark"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/whatsapp_arr"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"></ImageView>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/facebook"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rectangle"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="3dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/fb"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="90dp"
                    android:layout_toStartOf="@id/facebook_arr"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook"
                        android:textSize="22sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download Facebook Videos "
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryDark"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/facebook_arr"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/aboutus"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rectangle"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="3dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_about"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="90dp"
                    android:layout_toStartOf="@id/aboutus_arr"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Us"
                        android:textSize="22sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Know more about App "
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryDark"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/aboutus_arr"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/shareapp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rectangle"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="3dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_share"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="90dp"
                    android:layout_toStartOf="@id/shareapp_arr"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share App"
                        android:textSize="22sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share our App"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryDark"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/shareapp_arr"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rateapp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rectangle"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="3dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_more"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="90dp"
                    android:layout_toStartOf="@id/rateapp_arr"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate App"
                        android:textSize="22sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate this App"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryDark"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/rateapp_arr"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/moreapp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rectangle"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="3dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_rate"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="90dp"
                    android:layout_toStartOf="@id/moreapp_arr"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More Apps"
                        android:textSize="22sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download our other Apps"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryDark"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/moreapp_arr"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"></ImageView>
            </RelativeLayout>



        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>
    </layout>

